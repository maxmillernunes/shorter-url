{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "rootDir": "../",
  "testRegex": "src/.*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@test/(.*)$": "<rootDir>/test/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/setup-e2e.ts"],
  "testTimeout": 20000
}
